{
  "name": "silab",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "backend": "cd backend && npm start",
    "backend:dev": "cd backend && npm run dev",
    "start": "npm run backend",
    "deploy": "npm run build && cd backend && npm install --production",
  "docker:build": "docker build -t silab .",
  "docker:run": "docker run -p 4000:4000 silab",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "vite": "^5.2.0"
  }
}
